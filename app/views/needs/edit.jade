.page-header
  h1 Edit need

- form_for(need, {action: path_to.need(need), method: 'PUT', id: "need_form"}, function (form) {
  != partial('needs/form.jade', {locals: {form: form, need: need}})
  .actions
    != form.submit('Update need', {class: 'btn primary'})
    span= ' or '
    != link_to('Cancel', path_to.need(need), {class: 'btn'})
- });
