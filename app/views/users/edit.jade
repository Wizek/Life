.page-header
  h1 Edit user

- form_for(user, {action: path_to.user(user), method: 'PUT', id: "user_form"}, function (form) {
  != partial('users/form.jade', {locals: {form: form, user: user}})
  .actions
    != form.submit('Update user', {class: 'btn primary'})
    span= ' or '
    != link_to('Cancel', path_to.user(user), {class: 'btn'})
- });
